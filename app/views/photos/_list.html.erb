<% if @photos %>

    <div class="row">
        <% @photos.each do |photos| %>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading preview">
                        <%= image_tag photos.image.url() %>
                    </div>
                    <div class="panel-body">
                        <span class="pull-right">
                            <%= link_to photos, remote: true, method: :delete, data: {confirm: "Attention, vous allez supprimer cette photo"} do %>
                            <i class="fa fa-times fa-lg"></i>
                            <% end %>
                        </span>
                    </div>
                </div>
            </div>
        <% end %>
    </div>

<% end %>